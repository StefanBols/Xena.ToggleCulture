{
  "manifest_version": 2,

  "name": "Xena - Toggle Culture",
  "description": "Toggle Culture is an extension allowing developers and QA's at Xena.biz to change Culture (language) of UI for faster debugging.",
  "homepage_url": "https://github.com/StefanBols/Xena.ToggleCulture",
  "version": "1",
  "browser_action": {
    "default_title": "Toggle Culture"
  },
  "options_page": "options/options.html",


  "background": {
    "scripts": [
      "scripts/load.js"
    ],
    "persistent": true
  },

  "permissions": [
    "https://*.xena.biz/*",
    "https://localhost/*",
    "http://localhost/*",
    "activeTab",
    "storage"
  ],

  "content_scripts": [
    {
        "matches": [
            "https://*.xena.biz/*",
            "https://localhost/*",
            "http://localhost/*"
        ],
        "js": ["lib/jquery-3.3.1.min.js"]
    }
  ],

  "icons": {
    "100": "graphics/icons/icon.png"
  }
}